{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "inlineSources": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext",
      "ScriptHost"
    ],
    "declaration": true,
    "declarationDir": "lib/types",
    "declarationMap": true,
    "composite": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "lib",
    "paths": {
      "@hydraengine/*": [
        "../packages/*"
      ]
    }
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "node_modules",
    "**/lib/**",
    "examples"
  ],
}